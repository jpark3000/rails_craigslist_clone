
<div class='container'>
	<%= form_for :post, url: posts_path do |f| %>
		<p>
			<%= f.select(:category_id, [['Automobiles', 1], ['Appliances', 2], ['Books', 3], ['Musical Instruments', 4]])%>
		</p>
		<p>
			<%= f.label :title %>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</p>

		<p>
			<%= f.label :price %>
			<%= f.text_field :price %>
		</p>

		<p>
			<%= f.label :location %>
			<%= f.text_field :location %>
		</p>

		<%= f.submit 'Create Post' %>
	<% end %>
</div>