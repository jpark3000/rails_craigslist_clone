
<div class='container'>
	<%= form_for :user, url: users_path do |f| %>
		<p>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</p>

		<p>
			<%= f.label :email %>
			<%= f.text_field :email %>
		</p>

		<p>
			<%= f.label :phone %>
			<%= f.text_field :phone %>
		</p>

		<p>
			<%= f.label :password %>
			<%= f.text_field :password %>
		</p>

		<p>
			<%= f.label :password_confirmation, 'Confirm Password' %>
			<%= f.text_field :password_confirmation %>
		</p>

		<%= f.submit 'Sign up!' %>
	<% end %>
</div>